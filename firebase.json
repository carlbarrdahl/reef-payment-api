{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", ".git/**"],
    "rewrites": [
      {
        "source": "/shop",
        "destination": "/shop.html"
      },
      {
        "source": "/api",
        "function": "api"
      }
    ]
  },
  "functions": {
    "source": "./functions",
    "runtime": "nodejs14",
    "ignore": []
  }
}
